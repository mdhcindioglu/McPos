@page "/Customers"
@using McPos.Shared.ViewModels

<div class="card mb-2">
    <div class="card-body d-flex">
        <h2 class="mb-0 text-primary d-inline">Customers</h2>
        <button type="button" class="btn btn-primary ms-auto" @onclick="@(() => OpenCustomerDialog(new CustomerVM()))">Add</button>
    </div>
</div>
<div class="card">
    <div class="card-body d-flex">
        @if (response?.Items == null)
        {
            <p class="mb-0 text-muted text-center w-100">Loading...</p>
        }
        else if (response?.Items?.Any() != true)
        {
            <p class="mb-0 text-muted">There are no customers</p>
        }
        else
        {
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Country</th>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in response.Items)
                    {
                        <tr>
                            <td>@item.Id.ToString("N0")</td>
                            <td><button class="btn btn-link text-primary p-0" title="Update" @onclick="@(() => OpenCustomerDialog(item))"><i class="fa-solid fa-pen"></i> @item.FullName</button></td>
                            <td>@item.Country</td>
                            <td>@item.PhoneNumber</td>
                            <td><button class="btn btn-link text-danger p-0" title="Delete" @onclick="@(() => Delete(item.Id))"><i class="fa-solid fa-trash"></i></button></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
